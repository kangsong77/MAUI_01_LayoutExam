<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI_01_LayoutExam.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI_01_LayoutExam"
    xmlns:views="clr-namespace:MAUI_01_LayoutExam.Views"
    Shell.FlyoutBehavior="Flyout">

    <MenuItem x:Name="gridLayout" 
              Text="GridLayoutPage"
              Clicked="gridLayout_Clicked" ></MenuItem>
    <FlyoutItem FlyoutDisplayOptions="AsSingleItem">
        <ShellContent Title="MAUI_01_LayoutExam" ContentTemplate="{DataTemplate local:MainPage}"></ShellContent>
    </FlyoutItem>

</Shell>
